{
    "name": "igor-kozhevnikov/cross-git",
    "description": "Set of console commands for git",
    "keywords": ["cross", "console", "command", "git"],
    "homepage": "https://github.com/igor-kozhevnikov/cross-git",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Kozhevnikov",
            "email": "igor.kozhevkov@proton.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "igor-kozhevnikov/cross": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Cross\\Git\\": "src/"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs -p --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
